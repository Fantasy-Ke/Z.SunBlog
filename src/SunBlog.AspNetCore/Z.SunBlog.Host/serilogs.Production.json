{
  "Serilog": {
    "Properties": {
      "ApplicationName": "Z.SunBlog" // 应用程序名称
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File"
      //"Serilog.Sinks.Grafana.Loki"
    ],
    // 配置日志的最小记录等级
    "MinimumLevel": {
      // 默认记录等级
      "Default": "Information",
      // 重写各类包的日志记录等级
      "Override": {
        "Microsoft": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [
      "WithThreadId"
    ],
    // 日志输出方式
    "WriteTo": [
      // =================== 输出到控制台 ===================
      {
        "Name": "Console",
        "Args": {
          // 输出的模板
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      // =================== 输出到文件 ===================
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "App_Data/Logs/log.txt", // 日志输出到指定的目录
                "rollingInterval": "Hour", // 记录的精度 Month,Day,Hour
                "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      // =================== 输出到日志中心 ===================
      //{
      //  "Name": "GrafanaLoki",
      //  "Args": {
      //    "uri": "http://192.168.0.9:3000", // 日志中心收集器的链接地址
      //    "labels": [ // 配置label，方便查询筛选数据
      //      {
      //        "key": "app",
      //        "value": "Z.SunBlog" // 应用程序名称
      //      }
      //    ],
      //    "propertiesAsLabels": [
      //      "app"
      //    ]
      //  }
      //}
    ]
  }
}
